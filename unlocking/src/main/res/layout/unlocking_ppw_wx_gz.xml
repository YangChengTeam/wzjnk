<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="horizontal"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_content"
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/unlocking_ppw_wx_gz_bg"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/tv_unloing_title"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center_vertical"
                    android:text="@string/app_name"
                    android:textColor="#000000"
                    android:textSize="18dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#cccccc"></View>

                <TextView
                    android:id="@+id/tv_unloing_desc"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="16dp"
                    android:gravity="center"
                    android:text="关注公众号，解锁技能框方法"
                    android:textColor="#000000"
                    android:textSize="14dp"
                    android:typeface="monospace"/>

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:src="@mipmap/unlocking_wx_gz"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/tv_wx_name"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="105dp"
                            android:layout_marginTop="22dp"
                            android:gravity="center"
                            android:text="技能框大师"
                            android:textColor="#000000"
                            android:textSize="10dp"
                            android:typeface="monospace"/>

                        <TextView
                            android:id="@+id/tv_wx_name2"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_gravity="center_vertical"
                            android:layout_marginRight="70dp"
                            android:layout_marginTop="60dp"
                            android:gravity="center"
                            android:text="技能框大师"
                            android:textColor="#4db906"
                            android:textSize="10dp"
                            android:typeface="monospace"/>
                    </RelativeLayout>
                </FrameLayout>


                <TextView
                    android:id="@+id/tv_open_wx"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginRight="16dp"
                    android:background="@drawable/unlocing_btn_bg_wx_gz"
                    android:gravity="center"
                    android:text="打开微信"
                    android:textColor="#ffffff"
                    android:textSize="14dp"
                    />

            </LinearLayout>

            <ImageView
                android:id="@+id/iv_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@mipmap/unlocing_close"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>